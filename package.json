{
  "author": "Tanmay Mazumdar <mazumdar.t19@gmail.com>",
  "devDependencies": {
    "@eslint/compat": "^1.0.3",
    "@eslint/js": "^9.4.0",
    "eslint": "^9.4.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-canonical": "^43.0.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-sonarjs": "^1.0.3",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,jsx}": [
      "yarn run lint",
      "yarn run format"
    ]
  },
  "name": "@tarini/monorepo",
  "private": true,
  "scripts": {
    "format": "prettier -w packages/*",
    "lint": "eslint --fix --ignore-pattern .prettierrc --ignore-pattern build --ignore-pattern dist --ignore-pattern eslint.config.mjs --ignore-pattern node_modules --ignore-pattern packages/trs/trs.cjs",
    "postinstall": "husky"
  },
  "workspaces": [
    "packages/*"
  ]
}
